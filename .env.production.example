# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Database Configuration (Production)
DATABASE_URL=postgresql://username:password@localhost:5432/borbor_carnival_voting
# OR for MySQL:
# DATABASE_URL=mysql://username:password@localhost:3306/borbor_carnival_voting

# Payment API Configuration (Production)
PAYMENT_API_NAME=your_production_api_name
PAYMENT_API_KEY_PRO=your_production_api_key
PAYMENT_URL_PROD=https://your-payment-gateway.com/api/payment
PAYMENT_CALLBACK_URL=https://your-production-domain.com/api/payment/callback
MERCHANT_ID=your_production_merchant_id

# Authentication (Generate a strong JWT secret for production)
JWT_SECRET=your_super_strong_production_jwt_secret_key_minimum_32_characters

# Application
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
NODE_ENV=production
PORT=3000

# Security Headers (Optional)
NEXT_PUBLIC_SECURE_HEADERS=true

# Logging Level
LOG_LEVEL=info

# CORS Origins (Comma-separated list)
CORS_ORIGINS=https://your-production-domain.com,https://your-admin-domain.com
